<?xml version="1.0" encoding="utf-8"?>
<!--TODO 6 Atur layout activity_main.xml-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcartoon"
    tools:context=".menu_tulis_cerita">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="FORM POSTING CERITA"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="#000"
        android:background="#fff"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/edtidpostingcerita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:hint="ID "
        android:background="@drawable/background_edittext"
        android:gravity="top"
        android:textSize="16sp"
        android:textColor="#000"/>

    <Spinner
        android:id="@+id/edttipeceritapostingcerita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:entries="@array/tipe_cerita"
        android:hint="Tipe Cerita"
        android:background="@drawable/background_edittext"
        android:gravity="top"
        android:textSize="16sp"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/edtjudulpostingcerita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:hint="Masukkan Judulnya "
        android:background="@drawable/background_edittext"
        android:gravity="top"
        android:textSize="16sp"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/edtstatuspostingcerita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:hint="Status "
        android:background="@drawable/background_edittext"
        android:gravity="top"
        android:textSize="16sp"
        android:textColor="#000"/>

    <EditText
        android:id="@+id/textspeechinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:padding="10dp"
        android:hint="Masukkan Cerita "
        android:background="@drawable/background_edittext"
        android:gravity="top"
        android:textSize="16sp"
        android:textColor="#000"
        android:inputType="textMultiLine"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textsuara"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="cek isi cerita dengan suara"
            android:background="@drawable/background_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnspeech"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Input isi cerita dengan suara"
            android:background="@drawable/background_button"/>

    </LinearLayout>
    <Button
        android:id="@+id/btntambahpostingcerita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Cerita"/>

    </LinearLayout>
</ScrollView>