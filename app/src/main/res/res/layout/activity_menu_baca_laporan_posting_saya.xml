<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".menu_baca_laporan_posting_saya">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/sa">

        <TextView
            android:id="@+id/txtjudulcerita"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:text="Judul" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Pengarang : "
                    android:layout_marginRight="7dp"/>
                <TextView
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:id="@+id/txtidpengarang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Pengarang" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre Cerita : "
                    android:layout_marginRight="7dp"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:id="@+id/txttipecerita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipe Cerita" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Posting : "
                    android:layout_marginRight="7dp"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:id="@+id/txtidposting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Posting" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="6dp"
                android:background="#000"/>
        </LinearLayout>

        <TextView
            android:textColor="#000"
            android:id="@+id/txtisicerita"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ISI Cerita"
            android:layout_gravity="left"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <GridLayout
                android:columnOrderPreserved="false"
                android:rowCount="3"
                android:columnCount="1"
                android:alignmentMode="alignMargins"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </GridLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>