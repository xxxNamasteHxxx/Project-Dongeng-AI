<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcartoon"
    tools:context=".menu_feedback"
    android:scrollbars="vertical">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Isi Keluhan/Masukkan"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtidfeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="ID"
            android:textColor="#000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:padding="10dp"
            android:background="@drawable/background_edittext"
            android:gravity="top"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edtnamafeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#000"
            android:inputType="text"
            android:hint="Nama"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:padding="10dp"
            android:background="@drawable/background_edittext"
            android:gravity="top"
            android:textSize="16sp"/>
        <Spinner
            android:id="@+id/edttipemasukkan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:entries="@array/tipe_masukkan"
            android:textColor="#fff"
            android:inputType="text"
            android:hint="Tipe Masukkan"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:padding="10dp"
            android:background="@drawable/background_edittext"
            android:gravity="top"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/edtisifeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Isi"
            android:minHeight="120dp"
            android:gravity="top"
            android:textColor="#000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:background="@drawable/background_edittext"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnkirimfeedback"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/darkblue"
            android:text="Kirim Feedback"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>
</ScrollView>